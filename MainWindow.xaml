<Window x:Class="IV_Play.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:IV_Play"
        xmlns:vw="clr-namespace:IV_Play.View"
        xmlns:vm="clr-namespace:IV_Play.ViewModel"        
        Height="432" Width="1015">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo />
    </Window.TaskbarItemInfo>
    
    <Window.Background>
        <VisualBrush TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,100,100">
            <VisualBrush.Visual>
                <Image Source="C:\Users\Mataniko\Documents\GitHub\IV-Play\Resources\px_by_Gre3g.png"></Image>
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>

    <Grid>
        <vw:GameListView x:Name="gameList" />
    </Grid>

    <Window.Title>
        <Binding ElementName="gameList" Path="DataContext.Title"/>
    </Window.Title>
</Window>
