<Window x:Class="IVPlay.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:IVPlay"
        xmlns:vw="clr-namespace:IVPlay.View"
        xmlns:vm="clr-namespace:IVPlay.ViewModel"    
        xmlns:resx="clr-namespace:IVPlay.Properties"
        Height="{Binding Source={x:Static resx:Settings.Default}, Path=window_height, Mode=TwoWay}" 
        Width="{Binding Source={x:Static resx:Settings.Default}, Path=window_width, Mode=TwoWay}"
        Left="{Binding Source={x:Static resx:Settings.Default}, Path=Window_x, Mode=TwoWay}" 
        Top="{Binding Source={x:Static resx:Settings.Default}, Path=Window_y, Mode=TwoWay}">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo />
    </Window.TaskbarItemInfo>
    
    <Window.Background>
        <VisualBrush TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,100,100">
            <VisualBrush.Visual>
                <Image Source="/Resources/px_by_Gre3g.png"></Image>
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>

    <Grid>
        <vw:GameListView x:Name="gameList" />
    </Grid>

    <Window.Title>
        <Binding ElementName="gameList" Path="DataContext.Title"/>
    </Window.Title>
</Window>
